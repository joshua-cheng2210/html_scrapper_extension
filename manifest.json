{
  "manifest_version": 3,
  "name": "Webpage Capture Extension",
  "version": "1.0",
  "description": "A Chrome extension to capture and save the HTML of the current webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://canvas.umn.edu/courses/511424/quizzes/*"],
      "js": ["src/content/capture.ts"]
    }
  ]
}